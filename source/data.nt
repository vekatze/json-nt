import {
  core.dict {Bin, Tip, dict},
  core.text.loset,
}

constant _textdict: core.dict.trope(text) {
  core.dict.from-loset(core.text.loset.as-loset)
}

inline object(a): type {
  dict(text, a)
}

data json {
| Null
| Bool(bool)
| Integer(int)
| Float(float)
| Text(text)
| Object(object(json))
| Array(list(json))
}

define to-list-ordered<k, v>(d: dict(k, v)): list(pair(k, v)) {
  match d {
  | Tip =>
    []
  | Bin(_, k, v, d1, d2) =>
    let xs = to-list-ordered(d1) in
    let ys = to-list-ordered(d2) in
    append(xs, Cons(Pair(k, v), ys))
  }
}

define lookup(key: &text, kvs: &object(json)): ?&json {
  _textdict::lookup(key, kvs)
}
